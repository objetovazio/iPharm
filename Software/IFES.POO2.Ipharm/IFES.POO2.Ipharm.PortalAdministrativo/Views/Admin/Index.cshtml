@model IEnumerable<IFES.POO2.Ipharm.PortalAdministrativo.Models.Admin.ListAdminViewModel>

@{
    ViewBag.Title = "Lista de Administradores";
    string ativeClass = "fa fa-check-circle";
    string deactiveClass = "fa fa-times-circle";
}

<div class="row">
    <p class="alignright">
        @Html.ActionLink("+ Criar Novo", "Create", "Admin", new { @class = "btn btn-info" })
    </p>
</div>

<div class="table-responsive">
    <table class="table table-striped table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @if (item.IsActive)
                    {
                        <i class="@ativeClass" style="color:green"></i>
                    }
                    else
                    {
                        <i class="@deactiveClass" style="color:red"></i>
                    }
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-sm" }) 
                </td>
            </tr>
        }
    </table>
</div>
