@using IFES.POO2.Ipharm.PortalEmpresa.Models
@model LoginViewModel
@{
    ViewBag.Title = "iPharm - Login";
    Layout = "~/Views/Shared/_ViewLogin.cshtml";
}

<div class="login-page">
    <div class="form">
        <img src="~/Images/logo.png" alt="iPharm" style="padding-bottom: 10%" />
        
        <h4 class="cabecalho-login">Portal de Empresas</h4>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form validation-form", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div style="display:none">
                @Html.ValidationSummary()
            </div>


            @Html.TextBoxFor(l => l.Login, new { placeholder = "Login" })

            @Html.PasswordFor(l => l.Password, new { placeholder = "Senha" })

            <button type="submit" id="btns">Login</button>
        }

        <p class="message">Esqueceu a senha? @Html.ActionLink("Recuperar Senha!", "ForgotPassword", "Account") </p>
        <p class="message">Não tem cadastro? @Html.ActionLink("Cadastre sua empresa!", "Register", "Account") </p>
    </div>
</div>

@section scripts{
    @if (Request.HttpMethod != "POST")
    {
        <script type="text/javascript">
            MessageInfo("iPharm", "Bem vindo ao Portal de Empresas do iPharm.");
        </script>
    }
}